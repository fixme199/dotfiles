set commit-order = topo
set line-graphics = ascii
set show-changes = true
set show-notes = true
set tab-size = 4
set vertical-split = false
set wrap-lines = false

set blame-view = \
  line-number:display=true,interval=1 \
  id:display=true,width=7 \
  date:display=custom,local=true,format=%Y-%m-%d \
  author:display=full \
  text

set blob-view = \
  line-number:display=true,interval=1 \
  text

set main-view = \
  line-number:display=true,interval=5 \
  id:display=true,width=7 \
  date:display=true,local=true \
  author:display=full \
  commit-title:graph=v2,refs=true

bind generic - none
bind generic w move-page-up

set git-colors = no

color cursor               003     008
color title-blur           000     005
color title-focus          006     000
color status               003     000
color header               default 000
color line-number          008     default

color graph-commit         008     default
color id                   001     default
color date                 004     default
color author               002     default
color main-head            006     default
color main-ref             001     default
color main-remote          001     default
color main-tracked         011     default
color main-tag             004     default
color main-local-tag       004     default
color palette-0            013     default
color palette-1            011     default
color palette-2            006     default
color palette-3            002     default
color palette-7            004     default
color palette-9            005     default

color 'commit '            002     232
color 'Refs: '             161     232
color 'Author: '           006     232
color 'AuthorDate: '       006     232
color 'Commit: '           208     232
color 'CommitDate: '       208     232
color '---'                243     default
color diff-stat            067     default
color diff-header          243     232
color 'old file mode '     162     232
color 'new file mode '     002     232
color 'deleted file mode ' 162     232
color diff-index           243     232
color '--- '               162     232
color '+++ '               002     232
color diff-chunk           161     default
color diff-del             162     default
color diff-add             002     default

color stat-staged          002     default
color stat-unstaged        162     default

color mode                 067     default
color directory            blue    default bold
